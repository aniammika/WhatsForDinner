<Window
    x:Class="WhatsForDinner.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WhatsForDinner"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--Header-->
        <controls:HeaderControl Grid.ColumnSpan ="2"/>

        <!--Navigation-->
        <Grid Grid.Row="1" Background="#FFBA47">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Button Click="{x:Bind ViewModel.GetRandomDinner}" Content="Losuj obiad"/>
            <TextBox Grid.Row="1" Header="Szukaj obiadu" Margin="10"/>
            <Button Grid.Row="2" Margin="10">
                <StackPanel Orientation="Horizontal">
                    <SymbolIcon Symbol="Add"/>
                    <TextBlock Text="Dodaj obiad" Margin="5 0 0 0"/>
                </StackPanel>
            </Button>
            <Button Grid.Row="3" Click="{x:Bind ViewModel.Load}" Margin="10" HorizontalAlignment="Left">
                <SymbolIcon Symbol="Refresh"/>
            </Button>
            <ListView Grid.Row="4"
                      ItemsSource="{x:Bind ViewModel.Dinners, Mode=OneWay}"
                      SelectedItem="{x:Bind ViewModel.SelectedDinner, Mode=TwoWay}"
                      DisplayMemberPath="DinnerName"/>
        </Grid>

        <!--Main area-->
        <Grid Grid.Row="1" Grid.Column="1" Background="#523C17"
              Visibility="{x:Bind ViewModel.IsDinnerSelected, Mode=OneWay}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Margin="10"
                     Text="{x:Bind ViewModel.SelectedDinner.DinnerName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Grid.Row="1" Header="Opis" Margin="10"
                     Text="{x:Bind ViewModel.SelectedDinner.DinnerDescription, Mode=OneWay}"/>
            <ComboBox Grid.Row="2" Header="Kuchnia" Margin="10" HorizontalAlignment="Stretch"
                      ItemsSource="{x:Bind ViewModel.Cusines, Mode=OneWay}"
                      DisplayMemberPath="CusineName"
                      SelectedValuePath="Id"
                      SelectedValue="{x:Bind ViewModel.SelectedDinner.CusineId, Mode=TwoWay}"/>
            <TextBox Grid.Row="3" Header="Tagi" Margin="10"/>
            <CheckBox Grid.Row="4" Content="Ulubiony?" Margin="10"
                      IsChecked="{x:Bind ViewModel.SelectedDinner.IsDinnerFavourite, Mode=TwoWay}"/>
            <TextBox Grid.Row="5" Header="Link do przepisu" Margin="10"/>
            <StackPanel Grid.Row="6" Orientation="Horizontal">
                <Button Content="Edytuj" Margin="10 10 10 30"
                    Click="{x:Bind ViewModel.SelectedDinner.Edit}"
                    VerticalAlignment="Bottom" HorizontalAlignment="Left"
                    />
                <Button Visibility="{x:Bind ViewModel.SelectedDinner.IsEditMode}" Content="Zapisz" Margin="10 10 10 30"
                    IsEnabled="{x:Bind ViewModel.SelectedDinner.CanSave, Mode=OneWay}"
                    Click="{x:Bind ViewModel.SelectedDinner.Save}"
                    VerticalAlignment="Bottom" HorizontalAlignment="Left"
                    />
            </StackPanel>

        </Grid>


    </Grid>


</Window>
